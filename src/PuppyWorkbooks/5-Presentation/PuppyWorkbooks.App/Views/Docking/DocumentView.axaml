<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PuppyWorkbooks.App.ViewModels.Docking"
             mc:Ignorable="d"
             x:Class="PuppyWorkbooks.App.Views.Docking.DocumentView"
             x:DataType="vm:DocumentViewModel">

    <Grid Margin="6">
        <TextBox Text="{Binding Text, Mode=TwoWay}" AcceptsReturn="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</UserControl>
