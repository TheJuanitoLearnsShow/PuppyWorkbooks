<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:PuppyMapper.Viewmodels;assembly=PuppyMapper.ViewModels"
             xmlns:docking="clr-namespace:PuppyWorkbooks.App.Views.Docking"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PuppyWorkbooks.App.Views.Docking.DocumentDefinitionsView"
             x:DataType="viewmodels:DocumentDefinitionsViewModel">
    
    <!-- Left side list and add button , needs to go to its own control-->
    <StackPanel  Margin="8">
      <ListBox x:Name="DocumentsList" ItemsSource="{Binding Documents}" 
               SelectedItem="{Binding SelectedDocument}" 
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
          <ListBox.ItemTemplate>
              <DataTemplate>
                  <docking:MappingDocumentItemView/>
              </DataTemplate>
          </ListBox.ItemTemplate>
      </ListBox>
      
      <Button x:Name="OpenMapping" Content="Open Mapping" Margin="8" HorizontalAlignment="Stretch"/>
      <Button x:Name="AddMapping" Content="Add Mapping" Margin="8,24,8,8" HorizontalAlignment="Stretch"/>
    </StackPanel>
</UserControl>
