<reactiveUi:ReactiveUserControl x:TypeArguments="viewModels:WorkCellViewModel" 
                                x:Class="PuppyWorkbooks.App.Wpf.Views.WorkCellView"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:local="clr-namespace:PuppyWorkbooks.App.Wpf.Views"
                                xmlns:reactiveUi="http://reactiveui.net"
                                xmlns:viewModels="clr-namespace:PuppyWorkbooks.ViewModels;assembly=PuppyWorkbooks.ViewModels"
                                mc:Ignorable="d"
                                d:DesignHeight="300" d:DesignWidth="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <!-- <ColumnDefinition Width="1*"></ColumnDefinition>  -->
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <!-- <ColumnDefinition Width="1*"></ColumnDefinition> -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Margin="6" HorizontalAlignment="Right">Formula Name</TextBlock>
        <TextBox Margin="6" Grid.Row="0" Grid.Column="1" x:Name="Name"></TextBox>
        <TextBlock Margin="6" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right">Formula</TextBlock>
        <TextBox Margin="6" Grid.Row="1" Grid.Column="1"  x:Name="Formula" HorizontalAlignment="Stretch"
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"></TextBox>
        <!-- <Button Margin="6" Grid.Row="0" Grid.Column="4" x:Name="EditFormulaBtn" Content="..." Width="25" /> -->
        
        <TextBlock Margin="6" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center">Comments</TextBlock>
        <TextBox Margin="4" Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" x:Name="Comments"
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto">
        </TextBox>
        
        <TextBlock Margin="6" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right">Result</TextBlock>
        <TextBox IsReadOnly="True" Margin="6" Grid.Row="2" Grid.Column="1" x:Name="Result"
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"></TextBox>
        <Button Grid.Column="0" Grid.Row="3" Margin="6" x:Name="ExecuteBtn">Execute</Button>
    </Grid>
</reactiveUi:ReactiveUserControl>
