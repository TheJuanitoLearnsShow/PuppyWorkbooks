<reactiveUi:ReactiveUserControl x:TypeArguments="viewModels:WorkCellViewModel" 
                                x:Class="PuppyWorkbooks.App.Wpf.Views.WorkCellView"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:local="clr-namespace:PuppyWorkbooks.App.Wpf.Views"
                                xmlns:reactiveUi="http://reactiveui.net"
                                xmlns:viewModels="clr-namespace:PuppyWorkbooks.ViewModels;assembly=PuppyWorkbooks.ViewModels"
                                mc:Ignorable="d"
                                d:DesignHeight="300" d:DesignWidth="700">
    <Border Style="{StaticResource FormulaCardStyle}">
        <Grid MinWidth="300">
            <Grid.ColumnDefinitions>
                <!-- Left: Name + Formula + Comments -->
                <ColumnDefinition Width="*" />
                <!-- Right: Result -->
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,16,0">
                <TextBlock x:Name="Name" Style="{StaticResource FormulaNameTextStyle}" />
                <TextBlock x:Name="Formula" Margin="0,4,0,0" Style="{StaticResource FormulaTextStyle}" />
                <TextBlock x:Name="Comments" Margin="0,6,0,0"
                       Style="{StaticResource CommentsTextStyle}" />
            </StackPanel>
            <TextBlock Grid.Column="1" x:Name="Result" Style="{StaticResource ResultTextStyle}" />
        </Grid>
    </Border>
</reactiveUi:ReactiveUserControl>
